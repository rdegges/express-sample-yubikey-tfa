extends base

block vars
  - var title = 'TFA - Login'
  - var description = 'Login with your Yubikey device!'
  - var bodytag = 'login'

block body
  .container.custom-container
    .va-wrapper
      .view.login-view.container
        .box.row
          div(class='email-password-area col-xs-12 large col-sm-12')
            .header
              span.
                Login With Your Yubikey Device

            if error
              .alert.alert-danger.bad-login
                p #{error}

            form.login-form.form-horizontal(method='post', role='form')
              .form-group.group-email
                label(class='col-sm-4') Yubikey OTP

                div(class='col-sm-8')
                  input.form-control(autofocus='true', placeholder='Insert your Yubikey and Tap the Button', required=true, name='otp', type='text')

              div
                button.login.btn.btn-login.btn-sp-green(type='submit') Login with Yubikey
